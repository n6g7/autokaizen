{
  "rules": {
    "projects": {
      ".read": "auth != null && root.child('users/'+auth.uid+'/access').val() == true",
      ".write": "auth != null && root.child('users/'+auth.uid+'/access').val() == true",

      "$pid": {
        "currentSprint": {
          ".validate": "newData.isNumber()"
        },
        "name": {
          ".validate": "newData.isString()"
        },
        "hookId": {
          ".validate": "newData.isString()"
        },

        "defects": {
          "$did": {
            "cardId": {
              ".validate": "newData.isString()"
            },
            "labelId": {
              ".validate": "newData.isString()"
            }
          }
        },

        "labels": {
          "$lid": {
            "colour": {
              ".validate": "newData.isString()"
            },
            "name": {
              ".validate": "newData.isString()"
            }
          }
        }
      }
    },

    "users": {
      ".read": false,
      ".write": false,

      "$uid": {
        "access": {
          ".validate": "newData.isBoolean()"
        }
      }
    }
  }
}
